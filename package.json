{
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "hot": "vite --host",
        "preview": "vite preview",
        "serve": "php artisan serve",
        "pulse": "php artisan pulse:work",
        "tinker": "php artisan tinker",
        "test": "php artisan test",
        "db:fresh": "php artisan migrate:fresh",
        "db:seed": "php artisan db:seed",
        "db:reset": "php artisan migrate:fresh --seed",
        "clear": "php artisan optimize:clear",
        "cache:clear": "php artisan cache:clear && php artisan config:clear && php artisan route:clear && php artisan view:clear",
        "info": "php artisan about",
        "lint": "eslint resources/js --ext .js,.vue",
        "lint:fix": "eslint resources/js --ext .js,.vue --fix",
        "lint:css": "stylelint \"resources/**/*.css\"",
        "format": "prettier --write \"resources/**/*.{js,vue,css,scss,blade.php}\"",
        "start": "npm run clear && npm run serve",
        "setup": "composer install && npm install && php artisan key:generate && php artisan storage:link && php artisan migrate",
        "deploy": "npm run build && php artisan optimize",
        "all": "concurrently \"npm run dev\" \"npm run serve\""
    },
    "devDependencies": {
        "@popperjs/core": "^2.11.8",
        "@vitejs/plugin-vue": "^5.2.3",
        "autoprefixer": "^10.4.21",
        "axios": "^1.9.0",
        "concurrently": "^8.2.2",
        "eslint": "^8.57.0",
        "eslint-plugin-vue": "^9.23.0",
        "laravel-vite-plugin": "^1.2.0",
        "postcss": "^8.5.3",
        "prettier": "^3.2.5",
        "stylelint": "^16.2.1",
        "stylelint-config-standard": "^38.0.0",
        "tailwindcss": "^3.4.17",
        "vite": "^6.3.3",
        "vue": "^3.5.13"
    },
    "name": "pbl-211",
    "version": "1.0.0",
    "description": "EcoZense - Web Application for Eco Enzyme",
    "main": "vite.config.js",
    "directories": {
        "doc": "docs",
        "test": "tests"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nossilleen/PBL-211.git"
    },
    "keywords": [
        "eco-enzyme",
        "laravel",
        "vue",
        "tailwind"
    ],
    "author": "Tim PBL-211",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/nossilleen/PBL-211/issues"
    },
    "homepage": "https://github.com/nossilleen/PBL-211#readme",
    "dependencies": {
        "aos": "^2.3.4"
    }
}
